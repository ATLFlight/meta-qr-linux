---
 Makefile.am         |  2 ++
 configure.ac        | 30 ++++++++++++++++++++++++++++++
 dtbtool/Makefile.am |  3 +++
 3 files changed, 35 insertions(+)
 create mode 100644 Makefile.am
 create mode 100644 configure.ac
 create mode 100644 dtbtool/Makefile.am

diff --git a/Makefile.am b/Makefile.am
new file mode 100644
index 0000000..31851af
--- /dev/null
+++ b/Makefile.am
@@ -0,0 +1,2 @@
+
+SUBDIRS := dtbtool 
diff --git a/configure.ac b/configure.ac
new file mode 100644
index 0000000..f70b484
--- /dev/null
+++ b/configure.ac
@@ -0,0 +1,30 @@
+  AC_PREREQ(2.61)
+  AC_INIT([dtbtool],1.0.0)
+
+  AM_INIT_AUTOMAKE([-Wall gnu foreign])
+  AM_MAINTAINER_MODE
+
+  AC_CONFIG_HEADER([config.h])
+  AC_CONFIG_MACRO_DIR([m4])
+
+  # Checks for programs.
+  AM_PROG_AS
+  AC_PROG_CC
+  AM_PROG_CC_C_O
+  AC_PROG_LIBTOOL
+  AC_PROG_AWK
+  AC_PROG_CPP
+  AC_PROG_CXX
+  AC_PROG_INSTALL
+  AC_PROG_LN_S
+  AC_PROG_MAKE_SET
+
+  AS_CASE([$host],
+          [arm*], [ARM=yes],
+          [ARM=no]
+  )
+
+  AC_OUTPUT([ \
+          Makefile \
+          dtbtool/Makefile 
+  ])
diff --git a/dtbtool/Makefile.am b/dtbtool/Makefile.am
new file mode 100644
index 0000000..772b728
--- /dev/null
+++ b/dtbtool/Makefile.am
@@ -0,0 +1,3 @@
+bin_PROGRAMS = dtbtool
+dtbtool_SOURCES = dtbtool.c
+
